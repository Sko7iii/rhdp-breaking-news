---
import PageLayout from "@/layouts/Base.astro";
import Search from "@/components/Search.astro";

const meta = {
	description: "Rechercher sur RHDP Breaking News",
	title: "Recherche",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Recherche</h1>
		
		<p class="mb-6">Entrez votre recherche ci-dessous pour trouver des articles et des vidéos sur notre site.</p>
		
		<Search />
	</div>
	
	<script is:inline>
		// Le script pagefind.js sera disponible après le build
		// Nous n'essayons pas de l'importer directement ici pour éviter les erreurs pendant le build
		if (typeof window !== 'undefined') {
			document.addEventListener('DOMContentLoaded', function() {
				console.log('La recherche sera disponible après le déploiement complet du site');
			});
		}
	</script>
</PageLayout> 