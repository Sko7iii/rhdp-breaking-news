---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";

const meta = {
	description: "Contactez RHDP Breaking News",
	title: "Contact",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Contactez-nous</h1>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<div>
				<h2 class="text-xl font-semibold mb-4 text-accent-two">Envoyez-nous un message</h2>
				
				<form name="contact" method="POST" data-netlify="true" class="space-y-4">
					<input type="hidden" name="form-name" value="contact" />
					
					<div>
						<label for="nom" class="block mb-1 font-medium">Nom</label>
						<input 
							type="text" 
							name="nom" 
							id="nom" 
							placeholder="Votre nom" 
							required
							class="w-full p-2 rounded-md border border-special-lighter bg-special-lightest focus:outline-none focus:ring-2 focus:ring-accent-base"
						/>
					</div>
					
					<div>
						<label for="email" class="block mb-1 font-medium">Email</label>
						<input 
							type="email" 
							name="email" 
							id="email" 
							placeholder="Votre email" 
							required
							class="w-full p-2 rounded-md border border-special-lighter bg-special-lightest focus:outline-none focus:ring-2 focus:ring-accent-base"
						/>
					</div>
					
					<div>
						<label for="message" class="block mb-1 font-medium">Message</label>
						<textarea 
							name="message" 
							id="message" 
							placeholder="Votre message" 
							rows="5" 
							required
							class="w-full p-2 rounded-md border border-special-lighter bg-special-lightest focus:outline-none focus:ring-2 focus:ring-accent-base"
						></textarea>
					</div>
					
					<button 
						type="submit"
						class="px-6 py-2 rounded-md text-white font-medium bg-gradient-to-r from-accent-one to-accent-two hover:brightness-110 transition-all"
					>
						Envoyer
					</button>
				</form>
			</div>
			
			<div>
				<h2 class="text-xl font-semibold mb-4 text-accent-two">Informations de contact</h2>
				
				<ul class="space-y-4">
					<li class="flex items-center gap-3">
						<span class="w-8 h-8 flex items-center justify-center rounded-full bg-special-lighter text-accent-base">
							<Icon name="mdi:phone" class="w-5 h-5" />
						</span>
						<a href="tel:0505303674" class="hover:text-accent-two">0505303674</a>
					</li>
					
					<li class="flex items-center gap-3">
						<span class="w-8 h-8 flex items-center justify-center rounded-full bg-special-lighter text-accent-base">
							<Icon name="mdi:email" class="w-5 h-5" />
						</span>
						<a href="mailto:contact@rhdpbreakingnews.ci" class="hover:text-accent-two">contact@rhdpbreakingnews.ci</a>
					</li>
					
					<li class="flex items-center gap-3">
						<span class="w-8 h-8 flex items-center justify-center rounded-full bg-special-lighter text-accent-base">
							<Icon name="mdi:facebook" class="w-5 h-5" />
						</span>
						<a href="https://web.facebook.com/RHDPBREAKINGNEWS/?locale=fr_FR&_rdc=1&_rdr#" target="_blank" rel="noopener" class="hover:text-accent-two">RHDP Breaking News</a>
					</li>
					
					<li class="flex items-center gap-3">
						<span class="w-8 h-8 flex items-center justify-center rounded-full bg-special-lighter text-accent-base">
							<Icon name="mdi:web" class="w-5 h-5" />
						</span>
						<a href="https://www.tiktok.com/@rhdp.breaking.news" target="_blank" rel="noopener" class="hover:text-accent-two">@rhdp.breaking.news</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</PageLayout> 